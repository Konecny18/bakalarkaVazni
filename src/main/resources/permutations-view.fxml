<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" style="-fx-background-color: #f0f2f5;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.PermutationsController">
   <children>
      <StackPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <VBox alignment="CENTER" maxHeight="400.0" maxWidth="500.0" spacing="25.0" style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">
               <padding>
                  <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
               </padding>
               <children>
                  <VBox alignment="CENTER" spacing="5.0">
                     <children>
                        <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Nastavenie simulácie" />
                        <Label style="-fx-font-size: 13px; -fx-text-fill: #7f8c8d;" text="Zadajte parametre pre výpočet pravdepodobnosti" />
                     </children>
                  </VBox>

                  <GridPane hgap="15.0" vgap="15.0">
                     <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                        <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="200.0" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
                     </rowConstraints>
                     <children>
                        <Label style="-fx-font-weight: bold; -fx-text-fill: #34495e;" text="Počet väzňov:" />
                        <TextField fx:id="tfPocetVaznov" prefHeight="35.0" promptText="napr. 100" style="-fx-background-radius: 5;" GridPane.columnIndex="1" />

                        <Label style="-fx-font-weight: bold; -fx-text-fill: #34495e;" text="Stratégia:" GridPane.rowIndex="1" />
                        <ComboBox fx:id="cbStrategie" maxWidth="Infinity" prefHeight="35.0" style="-fx-background-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <Label style="-fx-font-weight: bold; -fx-text-fill: #34495e;" text="Počet simulácií:" GridPane.rowIndex="2" />
                        <TextField fx:id="tfPocetPermutacii" prefHeight="35.0" promptText="napr. 10000" style="-fx-background-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                     </children>
                  </GridPane>

                  <HBox alignment="CENTER" spacing="20.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#onSpustiButtonClick" prefHeight="40.0" prefWidth="150.0"
                                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;" text="Spustiť výpočet" />
                        <Button mnemonicParsing="false" onAction="#onCloseButtonClick" prefHeight="40.0" prefWidth="100.0"
                                style="-fx-background-color: transparent; -fx-text-fill: #7f8c8d; -fx-border-color: #bdc3c7; -fx-border-radius: 8; -fx-cursor: hand;" text="Zavrieť" />
                     </children>
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </HBox>
               </children>
            </VBox>
         </children>
      </StackPane>
   </children>
</AnchorPane>