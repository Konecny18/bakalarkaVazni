<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="GUI.PermutationsController" prefHeight="400.0" prefWidth="600.0">
   <children>
      <StackPane AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <children>
            <VBox alignment="CENTER" spacing="12.0">
               <padding>
                  <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
               </padding>
               <Label text="Nastavenie simulácie" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

               <HBox alignment="CENTER" spacing="10.0">
                  <Label text="Počet väzňov:" />
                  <TextField fx:id="tfPocetVaznov" prefWidth="120.0" />
               </HBox>

               <HBox alignment="CENTER" spacing="10.0">
                  <Label text="Stratégia:" />
                  <ComboBox fx:id="cbStrategie" prefWidth="260.0" />
               </HBox>

               <HBox alignment="CENTER" spacing="10.0">
                  <Label text="Počet permutácií:" />
                  <TextField fx:id="tfPocetPermutacii" prefWidth="120.0" />
               </HBox>

               <HBox alignment="CENTER" spacing="10.0">
                  <Button text="Spustiť" onAction="#onSpustiButtonClick" />
                  <Button text="Zavrieť" onAction="#onCloseButtonClick" />
               </HBox>
            </VBox>
         </children>
      </StackPane>
   </children>
</AnchorPane>
