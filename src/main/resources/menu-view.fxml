<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>


<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="GUI.MenuController">
   <children>
      <StackPane AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <children>
            <VBox alignment="CENTER" spacing="20.0">
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
               </padding>
               <Label alignment="TOP_CENTER" style="-fx-font-size: 24px; -fx-font-weight: bold;"
                      text="Simulácia problému 100 väzňov"/>
               <Button fx:id="btnSimulacia" mnemonicParsing="false" onAction="#onSimulaciaButtonClick"
                       text="Spustiť simuláciu" maxWidth="220.0"/>
               <Button fx:id="btnVysvetlenie" mnemonicParsing="false" onAction="#onVysvetlenieButtonClick"
                       text="Vysvetlenie algoritmu" maxWidth="220.0"/>
            </VBox>
         </children>
      </StackPane>
   </children>
</AnchorPane>
