<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<HBox spacing="15.0" prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.ExplainController">
    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
    </padding>
    <VBox spacing="10.0" prefWidth="400.0">
        <Label text="Vyberte stratégiu pre vysvetlenie:" style="-fx-font-weight: bold;"/>
        <ComboBox fx:id="cbStrategieExplain" onAction="#onStrategiaChanged" prefWidth="300.0"/>

        <Label text="Teoretické vysvetlenie:" style="-fx-font-weight: bold;"/>
        <TextArea fx:id="txtVysvetlenie" editable="false" wrapText="true" VBox.vgrow="ALWAYS"/>

        <Label text="Zoznam cyklov v aktuálnej permutácii:" style="-fx-font-weight: bold;"/>
        <TextArea fx:id="txtAreaCykly" editable="false" prefHeight="150.0"/>

        <Button text="Generovať novú permutáciu" onAction="#generujNovuMapu" maxWidth="Infinity"/>
    </VBox>

    <VBox spacing="10.0" alignment="CENTER" HBox.hgrow="ALWAYS">
        <Label fx:id="lblStatus" text="Status" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
        <StackPane VBox.vgrow="ALWAYS">
            <GridPane fx:id="paneKrabice" alignment="CENTER" hgap="5.0" vgap="5.0"/>
        </StackPane>
        <Label fx:id="lblInfo" text="Kliknite na krabicu pre detail"/>
        <Button text="Zavrieť" onAction="#onClose"/>
    </VBox>
</HBox>